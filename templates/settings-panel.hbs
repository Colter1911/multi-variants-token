<section class="mta-settings-panel {{#if randomEnabled}}is-disabled{{/if}}">
  <header>
    <h3>{{localize "MTA.SettingsPanelTitle" label=label}}</h3>
  </header>

  <div class="mta-form-grid">
    <label><input type="checkbox" {{checked image.isDefault}} disabled />Default Image</label>
    <label><input type="checkbox" {{checked image.autoEnable.wounded}} disabled />Wounded Enable</label>
    <label>Wounded % <input type="number" value="{{image.autoEnable.woundedPercent}}" min="1" max="99" disabled /></label>
    <label><input type="checkbox" {{checked image.autoEnable.die}} disabled />Die (0 hp)</label>

    {{#if isToken}}
      <label><input type="checkbox" {{checked image.dynamicRing.enabled}} disabled />Dynamic Token Ring</label>
      <label>Scale <input type="range" min="0.1" max="3" step="0.1" value="{{image.dynamicRing.scaleCorrection}}" disabled /></label>
      <label>Ring Color <input type="color" value="{{image.dynamicRing.ringColor}}" disabled /></label>
      <label>Background Color <input type="color" value="{{image.dynamicRing.backgroundColor}}" disabled /></label>
    {{/if}}

    <label>Image File <input type="text" value="{{image.src}}" disabled /></label>
  </div>

  <footer class="mta-panel-actions">
    <button type="button" class="mta-button-danger" disabled>Del</button>
    <button type="button" class="mta-button-primary" disabled>Save</button>
  </footer>
</section>
