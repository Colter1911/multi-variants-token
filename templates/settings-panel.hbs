<section class="mta-settings-panel {{#if randomEnabled}}is-disabled{{/if}}">
  <header>
    <h3>{{localize "MTA.SettingsPanelTitle" label=label}}</h3>
  </header>

  <div class="mta-form-grid" {{#if randomEnabled}}disabled{{/if}}>
    <label><input type="checkbox" name="isDefault" {{checked image.isDefault}} />Default Image</label>
    <label><input type="checkbox" name="autoEnable.wounded" {{checked image.autoEnable.wounded}} />Wounded
      Enable</label>
    <label>Wounded % <input type="number" name="autoEnable.woundedPercent" value="{{image.autoEnable.woundedPercent}}"
        min="1" max="99" /></label>
    <label><input type="checkbox" name="autoEnable.die" {{checked image.autoEnable.die}} />Die (0 hp)</label>

    {{#if isToken}}
    <label><input type="checkbox" name="dynamicRing.enabled" {{checked image.dynamicRing.enabled}} />Dynamic Token
      Ring</label>
    <label>Scale <input type="range" name="dynamicRing.scaleCorrection" min="0.1" max="3" step="0.1"
        value="{{image.dynamicRing.scaleCorrection}}" /> <span>{{image.dynamicRing.scaleCorrection}}</span></label>
    <label>Ring Color <input type="color" name="dynamicRing.ringColor"
        value="{{image.dynamicRing.ringColor}}" /></label>
    <label>Background Color <input type="color" name="dynamicRing.backgroundColor"
        value="{{image.dynamicRing.backgroundColor}}" /></label>
    {{/if}}

    <label>Image File
      <div class="mta-file-input">
        <input type="text" name="src" value="{{image.src}}" />
        <button type="button" data-action="browse-file" title="Browse Files"><i class="fas fa-file-import"></i></button>
      </div>
    </label>
  </div>

  <footer class="mta-panel-actions">
    <button type="button" class="mta-button-danger" data-action="delete-image" {{#if
      randomEnabled}}disabled{{/if}}>Del</button>
    <button type="button" class="mta-button-primary" data-action="save-settings" {{#if
      randomEnabled}}disabled{{/if}}>Save</button>
  </footer>
</section>